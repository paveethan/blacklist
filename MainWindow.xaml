<Window x:Class="BList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BList"
        mc:Ignorable="d"
        Title="BlackList" Height="450" Width="800" Background="#FF36383C" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="117*"/>
            <ColumnDefinition Width="677*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Image Height="100" Source="BL.png" Margin="15"/>
            <Button x:Name="btnHome" Content="Home" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="117" FontFamily="Segoe UI Black" Click="Home_Click" Background="#FF2B2E38"/>
            <Button x:Name="btnSearch" Content="Search" HorizontalAlignment="Center" Margin="0,2,0,0" VerticalAlignment="Top" Width="117" FontFamily="Segoe UI Black" Click="Search_Click" Background="#FF2B2E38"/>
        </StackPanel>
        <Label Content="First Name: " Grid.Column="1" HorizontalAlignment="Left" Margin="50,66,0,0" VerticalAlignment="Top" Width="115" FontFamily="Segoe UI Semibold"/>
        <Label Content="Last Name: " Grid.Column="1" HorizontalAlignment="Left" Margin="50,97,0,0" VerticalAlignment="Top" Width="115" FontFamily="Segoe UI Semibold"/>
        <Label Content="Phone Number: " Grid.Column="1" HorizontalAlignment="Left" Margin="50,128,0,0" VerticalAlignment="Top" Width="115" FontFamily="Segoe UI Semibold"/>
        <TextBox x:Name="textFirstName" Grid.Column="1" HorizontalAlignment="Left" Height="18" Margin="121,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168" Background="White"/>
        <TextBox x:Name="textLastName" Grid.Column="1" HorizontalAlignment="Left" Height="18" Margin="121,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168" />
        <TextBox x:Name="textPhoneNumber" Grid.Column="1" HorizontalAlignment="Left" Height="18" Margin="145,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168" />
        <Button x:Name="btnAddBlacklist" Content="Add to Blacklist" Grid.Column="1" HorizontalAlignment="Left" Margin="50,206,0,0" VerticalAlignment="Top" Width="468" Click="Blacklist_Click" Background="#FF2B2E38" FontFamily="Segoe UI Black"/>
        <Label Content="Reason:" Grid.Column="1" HorizontalAlignment="Left" Margin="50,159,0,0" VerticalAlignment="Top" Width="115" FontFamily="Segoe UI Semibold"/>
        <TextBox x:Name="textBlacklist" Grid.Column="1" HorizontalAlignment="Left" Height="18" Margin="108,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="410" />
    </Grid>
</Window>
